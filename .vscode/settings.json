    // "LICENSE": true,
    // "pnpm-lock.yaml": true,
    // ".github": true,
    // ".eslintignore": true,
    // ".eslintrc.yml": true,
    // ".eslintcache": true,
    // ".prettierignore": true,
    // ".prettierrc.json": true,
