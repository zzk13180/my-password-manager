{
  "name": "passbox",
  "version": "1.1.0",
  "description": "A versatile toolbox primarily designed for password management and note-taking.",
  "packageManager": "pnpm@8.9.2",
  "homepage": "https://apps.zhangzhankui.com/passbox",
  "repository": {
    "type": "git",
    "url": "https://github.com/zzk13180/passbox.git"
  },
  "bugs": {
    "url": "https://github.com/zzk13180/passbox/issues"
  },
  "author": {
    "name": "zhangzhankui",
    "email": "zzk13180@gmail.com",
    "url": "https://zhangzhankui.com/"
  },
  "main": "main/index.js",
  "private": true,
  "keywords": [
    "Electron",
    "Angular",
    "@alyle/ui",
    "ngrx",
    "password manager",
    "passbox"
  ],
  "scripts": {
    "dev": "concurrently --raw \"npm run ng:serve\" \"npm run electron:serve\"",
    "build": "npm run tsc-main && ng build -c production && electron-builder build",
    "ng:serve": "ng serve -c development --hmr",
    "electron:serve": "wait-on tcp:4200 && npm run tsc-main && npx electron . --serve",
    "tsc-main": "tsc -p tsconfig.serve.json",
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "commit": "cz",
    "gh": "gh-pages -d dist",
    "check": "tsc --noEmit -p tsconfig.json",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:stylelint",
    "lint:eslint": "eslint --cache --max-warnings 0 \"**/*.{cjs,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write \"**/*.{cjs,json,tsx,html,css,scss}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/ --config .stylelintrc.json"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  },
  "devDependencies": {
    "@alyle/ui": "^15.0.0",
    "@angular-builders/custom-webpack": "17.0.0",
    "@angular-devkit/build-angular": "~17.0.1",
    "@angular/animations": "^17.0.3",
    "@angular/cdk": "~17.0.1",
    "@angular/cli": "~17.0.1",
    "@angular/common": "~17.0.3",
    "@angular/compiler": "~17.0.3",
    "@angular/compiler-cli": "~17.0.3",
    "@angular/core": "~17.0.3",
    "@angular/forms": "^17.0.3",
    "@angular/language-service": "~17.0.3",
    "@angular/material": "~17.0.1",
    "@angular/platform-browser": "~17.0.3",
    "@angular/platform-browser-dynamic": "~17.0.3",
    "@angular/router": "~17.0.3",
    "@editorjs/checklist": "^1.6.0",
    "@editorjs/code": "^2.9.0",
    "@editorjs/delimiter": "^1.4.0",
    "@editorjs/editorjs": "^2.28.2",
    "@editorjs/embed": "^2.7.0",
    "@editorjs/header": "^2.8.1",
    "@editorjs/image": "^2.9.0",
    "@editorjs/inline-code": "^1.5.0",
    "@editorjs/marker": "^1.4.0",
    "@editorjs/nested-list": "^1.4.1",
    "@editorjs/quote": "^2.6.0",
    "@editorjs/raw": "^2.5.0",
    "@editorjs/table": "^2.3.0",
    "@editorjs/warning": "^1.4.0",
    "@electron/notarize": "^2.2.0",
    "@ngrx/effects": "~16.3.0",
    "@ngrx/store": "16.3.0",
    "@types/fs-extra": "11.0.4",
    "@types/node": "^20.9.1",
    "@types/pako": "^2.0.3",
    "@types/quill": "^2.0.14",
    "@types/uuid": "^9.0.7",
    "@types/webcrypto": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "astral-regex": "^2.0.0",
    "codex-notifier": "^1.1.2",
    "codex-tooltip": "^1.0.5",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "core-js": "3.33.2",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "fuse.js": "^7.0.0",
    "gh-pages": "^6.0.0",
    "highlight.js": "^11.9.0",
    "katex": "^0.16.9",
    "pako": "^2.1.0",
    "party-js": "^2.2.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.1.0",
    "quill": "^1.3.7",
    "quill-image-resize-module": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.8.1",
    "simplex-noise": "^4.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "swiper": "^11.0.4",
    "ts-node": "~10.9.1",
    "tslib": "^2.6.2",
    "typescript": "~5.2.2",
    "uuid": "^9.0.1",
    "wait-on": "7.2.0",
    "zone.js": "~0.14.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
