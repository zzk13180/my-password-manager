{
  "productName": "passbox",
  "appId": "com.zhangzhankui.passbox",
  "copyright": "Copyright Â© 2023 zhangzhankui",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!LICENSE",
    "!pnpm-lock.yaml",
    "!src/",
    "!dist/assets/fonts/",
    "!angular.json",
    "!tsconfig.json",
    "!passbox-user-data/",
    "!tsconfig.app.json",
    "!tsconfig.serve.json",
    "!tslint.json",
    "!README.md",
    "!*.map",
    "!.*/**/*",
    "!.*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "hardenedRuntime": true,
    "icon": "dist/assets/icons",
    "target": {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    }
  },
  "win": {
    "icon": "dist/assets/icons",
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true
  }
}
