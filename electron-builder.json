{
  "productName": "passbox",
  "appId": "com.zhangzhankui.passbox",
  "copyright": "Copyright Â© 2023 Zhang ZhanKui",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!LICENSE",
    "!pnpm-lock.yaml",
    "!src/",
    "!angular.json",
    "!tsconfig.json",
    "!passbox-user-data/",
    "!tsconfig.app.json",
    "!tsconfig.serve.json",
    "!tslint.json",
    "!README.md",
    "!*.map",
    "!.*/**/*",
    "!.*"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": ["nsis"]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true
  }
}
